// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AIAgent {
  id            String         @id @default(cuid())
  agentId       Int            @unique // On-chain Agent ID
  name          String
  personality   String         @default("Balanced")
  vaultAddress  String?
  ownerAddress  String
  signals       TradeSignal[]
  investments   Investment[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

model TradeSignal {
  id            String   @id @default(cuid())
  agentId       Int
  agent         AIAgent  @relation(fields: [agentId], references: [agentId])
  pair          String   // "BTC/USDT"
  size          Float
  collateral    Float
  leverage      Int
  isLong        Boolean
  status        String   @default("PENDING") // PENDING, EXECUTED, FAILED
  txHash        String?
  executedAt    DateTime?
  createdAt     DateTime @default(now())
}

model Investment {
  id              String    @id @default(cuid())
  txHash          String    @unique
  agentId         Int
  agent           AIAgent   @relation(fields: [agentId], references: [agentId])
  userAddress     String
  amount          Float     // Amount in underlying asset
  shares          Float     // Shares received
  timestamp       DateTime  @default(now())
  status          String    @default("ACTIVE") // ACTIVE, WITHDRAWN
  withdrawnAt     DateTime?
  withdrawnTxHash String?
  
  @@index([userAddress])
  @@index([agentId])
}
