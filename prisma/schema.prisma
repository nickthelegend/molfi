generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AIAgent {
  id            String         @id @default(cuid())
  agentId       Int            @unique // On-chain Agent ID
  name          String
  personality   String         @default("Balanced")
  vaultAddress  String?
  ownerAddress  String
  signals       TradeSignal[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

model TradeSignal {
  id            String   @id @default(cuid())
  agentId       Int
  agent         AIAgent  @relation(fields: [agentId], references: [agentId])
  pair          String   // "BTC/USDT"
  size          Float
  collateral    Float
  leverage      Int
  isLong        Boolean
  status        String   @default("PENDING") // PENDING, EXECUTED, FAILED
  txHash        String?
  executedAt    DateTime?
  createdAt     DateTime @default(now())
}
